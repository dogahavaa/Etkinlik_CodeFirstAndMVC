@model Etkinlik_CodeFirstAndMVC.Models.Etkinlik
@{
    ViewBag.Title = "Etkinliği Düzenle";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}


<div class="mainContainer">
    <div class="header">
        <h2>Düzenle</h2>
        <hr style="margin-bottom:10px;" />
    </div>

    <div class="contentOlustur">

        @using (Html.BeginForm("Duzenle", "Etkinlik", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(x => x.ID);
            @Html.HiddenFor(x => x.Resim); // burayı sor
            <div class="line">
                <label>Etkinlik</label><br />
                @Html.EditorFor(x => x.Isim, new { HtmlAttributes = new { @class = "box" } })<br />
                @Html.ValidationMessageFor(x => x.Isim, null, htmlAttributes: new { @class = "errorMessage" })
            </div>

            <div class="line">
                <label>Tarih</label><br />
                @Html.EditorFor(x => x.Tarih, new { HtmlAttributes = new { @class = "box" } })
            </div>

            <div class="line">
                <label>Resim</label><br />
                <div class="resimSol">
                    <img src="~/Assets/EtkinlikImages/@Model.Resim" style="width:100px; height:75px;" />
                </div>
                <div class="resimSag">
                    <input type="file" class="box" name="imageFile" />
                </div>
                <div style="clear:both"></div>
            </div>

            <div class="line">
                <label>Durum</label>
                @Html.EditorFor(x => x.Durum)
            </div>

            <div class="line" style="text-align:center">
                <input type="submit" value="Düzenle" class="createButton" />
            </div>
        }

    </div>
</div>